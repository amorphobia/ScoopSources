{
    "version": "643",
    "description": "A terminal pager program used to view (but not change) the contents of a text file one screen at a time, similar to the 'more' command.",
    "homepage": "https://www.greenwoodsoftware.com/less",
    "license": "GPL-3.0-only|BSD-3-Clause",
    "url": "https://greenwoodsoftware.com/less/less-643.zip",
    "hash": "3bb417c4b909dfcb0adafc371ab87f0b22e8b15f463ec299d156c495fc9aa196",
    "extract_dir": "less-643",
    "extract_to": "source",
    "installer": {
        "script": [
            "Copy-Item \"$dir\\source\\defines.wn\" \"$dir\\source\\defines.h\"",
            "Import-Module $(Join-Path $(Find-BucketDirectory -Root -Name sources) scripts/Utils.psm1)",
            "Initialize-VsDevShell | Out-Null",
            "[Console]::OutputEncoding = [System.Text.Encoding]::UTF8",
            "Push-Location \"$dir\\source\"",
            "nmake /f Makefile.wnm /c | Out-Null",
            "Pop-Location",
            "Copy-Item \"$dir\\source\\less.exe\" \"$dir\"",
            "Copy-Item \"$dir\\source\\lesskey.exe\" \"$dir\"",
            "Remove-Item -Recurse -Force \"$dir\\source\" | Out-Null"
        ]
    },
    "bin": [
        "less.exe",
        "lesskey.exe"
    ],
    "checkver": {
        "url": "https://greenwoodsoftware.com/less/download.html",
        "regex": "less-([\\d.]+).zip"
    },
    "autoupdate": {
        "url": "https://greenwoodsoftware.com/less/less-$version.zip",
        "extract_dir": "less-$version"
    }
}
